{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    // ✅ Add baseUrl + paths to resolve @demo/common to dist
    "baseUrl": ".",
    "paths": {
      "@demo/common": ["../common/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts", // ✅ Exclude Jest config
    "jest.config.js", // ✅ Exclude generated JS
    "jest.config.d.ts", // ✅ Exclude generated types
    "jest.config.js.map", // ✅ Exclude source maps
    "jest.config.d.ts.map"
  ],
  // ✅ CRITICAL: Add project reference to common
  "references": [{ "path": "../common" }]
}
