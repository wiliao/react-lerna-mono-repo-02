{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "supertest": "^7.0.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "^8.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "web-vitals": "^4.2.4",
    "husky": "^9.0.11"
  },
  "scripts": {
    "start:app": "lerna run start --scope=@demo/app",
    "start:web": "lerna run start --scope=@demo/web",
    "start:all": "lerna run start --parallel --scope=@demo/app --scope=@demo/web",
    "test": "lerna run test --ignore=@demo/common",
    "test:all": "lerna run test",
    "test:app": "lerna run test --scope=@demo/app",
    "test:web": "lerna run test --scope=@demo/web",
    "test:watch:app": "lerna run test:watch --scope=@demo/app",
    "test:watch:web": "lerna run test:watch --scope=@demo/web",
    "test:coverage": "lerna run test:coverage --ignore=@demo/common",
    "build": "lerna run build --scope=@demo/common && lerna run build --ignore=@demo/common",
    "build:all": "lerna run build",
    "build:common": "lerna run build --scope=@demo/common",
    "build:app": "lerna run build --scope=@demo/app",
    "build:web": "lerna run build --scope=@demo/web",
    "clean": "lerna run clean",
    "clean:all": "lerna clean --yes && rimraf node_modules",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "lerna run typecheck",
    "typecheck:all": "lerna run typecheck",
    "typecheck:app": "lerna run typecheck --scope=@demo/app",
    "typecheck:web": "lerna run typecheck --scope=@demo/web",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "prepare": "husky"
  },
  "version": "1.0.0",
  "description": "A mono repo with independent packages",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wiliao/react-lerna-mono-repo-02.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wiliao/react-lerna-mono-repo-02/issues"
  },
  "homepage": "https://github.com/wiliao/react-lerna-mono-repo-02#readme"
}
